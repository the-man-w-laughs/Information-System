@{
    // Retrieve SystemInformationService using DependencyResolver
    var systemInformationService = DependencyResolver.Current.GetService<Services.Common.ISystemInformationService>();
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    <!-- Custom CSS for more green color -->
    <style>
        /* Navbar styling */
        .navbar {
            background-color: #28a745; /* Dark green background color */
        }

        .navbar-brand, .navbar-nav .nav-link {
            color: #fff; /* White text color */
        }

            /* Navbar text color on hover */
            .navbar-nav .nav-link:hover {
                color: #fff;
            }

        /* System information text color */
        .navbar-text {
            color: #fff; /* White text color */
        }
    </style>

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        @Html.ActionLink("ОАО \"Лучший банк на свете\"", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "ATM")">Банкомат</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Bank")">Банк</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Client")">Клиенты</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Deposit")">Депозиты</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Credit")">Кредиты</a>
                </li>
            </ul>
            <div class="navbar-text">@systemInformationService.CurrentBankDay.ToString("dd/MM/yyyy")</div>
        </div>
    </nav>

    <br />
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
