@model IEnumerable<WebApplication.Models.ViewModels.PlanOfDeposit>

@{
    ViewBag.Title = "Депозитные планы";
}

<style>
    .table-container {
        max-width: 600px;
        margin: 20px auto;
        overflow-x: auto;
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    .table tr:hover {
        background-color: #ddd;
    }

    .action-links {
        margin-top: 20px;
    }

    .action-links a {
        color: #4CAF50;
        text-decoration: none;
        margin-right: 10px;
    }

    .action-links a:hover {
        text-decoration: underline;
    }

    .btn {
        background-color: white;
        border: 2px solid #4CAF50;
        color: #4CAF50;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        cursor: pointer;
        border-radius: 5px;
    }

    .btn:hover {
        background-color: #4CAF50;
        color: white;
    }

    .container-title {
        display: flex;
        justify-content: space-between;
        margin-bottom: 50px;
    }
</style>

<div>
    <button onclick="window.location.href='@Url.Action("Index",  "Deposit")'" class="btn">Назад</button>
</div>
<div class="table-container">
    <div class="container-title">
        <h2>Депозитные планы</h2>
        <div>
            <button onclick="window.location.href='@Url.Action( "Create")'" class="btn">Создать</button>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.DayPeriod)</th>
                <th>@Html.DisplayNameFor(model => model.Percent)</th>
                <th>@Html.DisplayNameFor(model => model.Revocable)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.DayPeriod)</td>
                    <td>@Html.DisplayFor(modelItem => item.Percent)</td>
                    <td>@Html.DisplayFor(modelItem => item.Revocable)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
