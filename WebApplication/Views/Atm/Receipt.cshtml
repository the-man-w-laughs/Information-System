@model WebApplication.Models.ViewModels.ReceiptModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: lightgreen;
            text-align: center;
            padding: 20px;
        }

        .check {
            background-color: white;
            border: 2px solid black;
            padding: 20px;
            display: inline-block;
            text-align: left;
            max-width: 400px;
            margin: 0 auto;
        }

            .check hr {
                border: none;
                border-top: 2px dashed black;
                margin: 20px 0;
            }

            .check dl {
                margin: 0;
                padding: 0;
            }

            .check dt, .check dd {
                display: inline-block;
                margin: 5px 0;
            }

            .check dt {
                font-weight: bold;
                width: 150px;
            }

            .check dd {
                margin-left: 10px;
            }

            .check p {
                margin-top: 20px;
            }
    </style>
</head>
<body>
    <h2>Чек</h2>
    <div class="check">
        <hr>
        <dl>
            <dt>Номер:</dt>
            <dd>@Html.DisplayFor(model => model.CardNumber)</dd>
            <dt>Дата:</dt>
            <dd>@($"{Model.Date:dd.MM.yyyy}")</dd>
            <dt>Операция:</dt>
            <dd>@Html.DisplayFor(model => model.Operation)</dd>
            <dt>Сумма:</dt>
            <dd>@Html.DisplayFor(model => model.Amount)</dd>
        </dl>
        <hr>
        <p>
            @Html.ActionLink("Назад", "WorkPage")
        </p>
    </div>
</body>
</html>
